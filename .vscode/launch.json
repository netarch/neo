{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "00 (timeout)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/neo",
      "args": [
        "-f",
        "-i",
        "${workspaceFolder}/examples/00-reverse-path-filtering/network.toml",
        "-o",
        "${workspaceFolder}/examples/00-reverse-path-filtering/results"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "ASAN_OPTIONS",
          "value": "detect_leaks=0"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceFolder}/test/gdb_root.sh",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing"
        },
        {
          "description": "Set Disassembly Flavor to AT&T",
          "text": "-gdb-set disassembly-flavor att"
        },
        {
          "description": "Follow forked children",
          "text": "-gdb-set follow-fork-mode child"
        }
      ]
    }
  ]
}
